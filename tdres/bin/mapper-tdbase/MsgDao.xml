<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.tangdi.production.tdbase.dao.MsgDao">	<sql id="pageHeader">    	select * from(select a.*,rownum rn from(    </sql>    <sql id="pageRoot">      	) a where rownum &lt;= #{TD_ENDROW}) where rn &gt;=#{TD_STARTROW}    </sql>		<!--配置一个resultMap 指定返回的类型 -->      <resultMap id="Msg" type="Msg">          <result column="no"      property="no" 		/>          <result column="content" property="content" />    </resultMap>		<insert id="saveMsg" parameterType="java.util.Map">	  	INSERT INTO MSG (NO,CONTENT)	  	VALUES (#{NO},#{CONTENT})	</insert>		<select id="findListCount" resultType="int" parameterType="java.util.Map"> 		SELECT COUNT(1) FROM MSG  		<where> 			<if test="NO != null"> 				NO LIKE '%'||#{NO}||'%' 			</if> 		</where>	</select>		<select id="findList" resultType="Msg" parameterType="java.util.Map"> 		<include refid="pageHeader"/> 		SELECT NO,CONTENT FROM MSG   		<where> 			<if test="NO != null"> 				NO LIKE '%'||#{NO}||'%' 			</if> 		</where> 		ORDER BY to_number(NO)  		<include refid="pageRoot"/> 			</select></mapper>