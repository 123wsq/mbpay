<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:aop="http://www.springframework.org/schema/aop"
  xmlns:tx="http://www.springframework.org/schema/tx"
  xmlns:util="http://www.springframework.org/schema/util"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.0.xsd
    http://www.springframework.org/schema/tx
    http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
    http://www.springframework.org/schema/aop
    http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
    http://www.springframework.org/schema/util 
    http://www.springframework.org/schema/util/spring-util-4.0.xsd">
 	
 	<!-- 可单独配置数据源 -->
 	
 	<!-- mybatis文件配置，扫描所有mapper文件  -->
	<bean name="sqlSessionFactory-mpbatch"
	    class="org.mybatis.spring.SqlSessionFactoryBean"
	    p:dataSource-ref="dataSource"
	    p:databaseIdProvider-ref="dbProvider"
	    p:configLocation="classpath:mpbatch/conf-mpbatch/mybatis-config-mpbatch.xml"
	    p:mapperLocations="classpath:mpbatch/mapper-mpbatch/*.xml"
	    />
 	
	<!-- 扫描指定dao -->
	<bean name="mapperScanner-mpbatch" class="org.mybatis.spring.mapper.MapperScannerConfigurer"
        p:basePackage="com.tangdi.production.mpbatch.dao" 
        p:sqlSessionFactoryBeanName="sqlSessionFactory-mpbatch"/>
 
</beans>